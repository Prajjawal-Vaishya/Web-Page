<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard Layout</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" href="style/responsive.css">
</head>

<body class="bg-gray-200 min-h-screen flex flex-col">

    <!-- Select from here -->
    <!-- Toast Notification -->
    <div id="toast" class="hidden fixed top-5 right-5 bg-green-500 text-white px-4 py-3 rounded shadow-lg transition-all duration-500 z-50"></div>
    <!-- NOW COPY & PASTE  -->

    <div class="home-panel" id="home-panel">
        <!-- HEADER with Logo and Profile Icon -->
        <header class="flex items-center justify-between px-6 py-4 bg-white shadow">
            <div class="text-2xl font-bold text-gray-700 select-none">Logo</div>
            <div class="flex gap-4 items-center">
                <div class="last_update flex gap-1 bg-gray-200 px-4 py-2 rounded-full last-update">
                    <p>Last Updated:
                    <p id="dynamic_update">Just Now</p>
                    </p>
                </div>
                <button aria-label="User Profile"
                    class="w-10 h-10 rounded-full bg-gray-300 hover:bg-gray-400 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path
                            d="M12 12c2.7 0 4.9-2.2 4.9-4.9S14.7 2.2 12 2.2 7.1 4.4 7.1 7.1 9.3 12 12 12zm0 2.2c-3.2 0-9.6 1.6-9.6 4.8v2.4h19.2v-2.4c0-3.2-6.4-4.8-9.6-4.8z" />
                    </svg>
                </button>
            </div>
        </header>

        <!-- Select from here -->
        <!-- BANNER SECTION -->
        <section class="banner flex flex-col items-center justify-center mx-5 mt-6">
            <div id="banner-container"
                class="banner_component w-full max-w-7xl h:48 sm:h-60 md:h-64 lg:h-[50vh] flex items-center justify-center text-3xl font-semibold text-gray-700 select-none">
                <button aria-label="Previous Banner" id="prevSlide"
                    class="bg-white md:block hidden z-10 p-2 h-24 md:h-48 shadow hover:bg-gray-100 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <div
                    class="bg-gray-300 rounded shadow-lg overflow-hidden z-40 w-full max-w-7xl h-48 sm:h-60 md:h-64 lg:h-[50vh] flex items-center justify-center text-3xl font-semibold text-gray-700 select-none">
                    <img id="banner-img" class="w-full h-full object-cover" src="image/banner/banner0.jpg"
                        alt="banner_img">
                    <!-- <div class="text-3xl font-semibold text-gray-700 select-none">
                        
                    </div> -->
                </div>
                <button aria-label="Next Banner" id="nextSlide"
                    class="bg-white md:block hidden p-2 h-24 md:h-48 z-10 shadow hover:bg-gray-100 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                    </svg>
                </button>
            </div>

            <div class="flex space-x-2 justify-center p-5">
                <span id="dot-0" class="active w-9 h-3 rounded-full bg-gray-700 transition-all"></span>
                <span id="dot-1" class=" w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
                <span id="dot-2" class="w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
                <span id="dot-3" class="w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
                <span id="dot-4" class="w-3 h-3 rounded-full bg-gray-400 transition-all"></span>
            </div>
        </section>
        <!-- NOW COPY & PASTE  -->


        <main class="flex flex-col lg:flex-row max-w-7xl mx-auto mt-8 px-4 md:px-0 gap-6 flex-grow">

            <!-- Left Column -->
            <section class="flex flex-col space-y-6 flex-1 min-w-0">

                <!-- Select from here -->
                <!-- Smart Irrigation -->
                <div class="bg-white rounded-xl border border-gray-300 p-6 flex-1 min-w-[300px]">
                    <h3 class="text-xl font-semibold mb-4">Smart Irrigation</h3>
                    <div class="main-box flex flex-col md:flex-row justify-around  gap-4 pt-4 items-center">
                        <div class="flex items-center justify-center mb-4">
                            <div class="relative w-48 h-48 md:w-64 md:h-64">
                                <svg class="w-48 h-48 md:w-64 md:h-64" viewBox="0 0 36 36">
                                    <path class="text-gray-300" stroke-width="4" fill="none" stroke="currentColor"
                                        d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
                                    <path id="moisture-fill" class="text-blue-600" stroke-width="4" fill="none"
                                        stroke="currentColor" stroke-dasharray="20, 100"
                                        d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
                                </svg>
                                <div
                                    class="absolute inset-0 flex items-center justify-center md:text-3xl	 text-xl font-bold">
                                    <span id="moisture-percentage">20%</span>
                                </div>
                            </div>
                        </div>
                        <div class="space-y-3">
                            <button class="w-full bg-indigo-600 text-white py-2 rounded-lg"  id="setup-waterpump"> Setup Irrigation </button>
                            <button id="start-irrigation" class="w-full border border-indigo-600 text-indigo-600 py-2 bg-indigo-50 rounded-lg"> Start Irrigation </button>
                            <button id="stop-irrigation" class="w-full border border-red-600 text-red-600 py-2 bg-red-50 rounded-lg">Emergency Stop</button>
                        </div>
                    </div>

                </div>
                <!-- NOW COPY & PASTE -->

                <!-- Waste Reuse Suggestions -->
                <div class="bg-white p-6 rounded-lg shadow-md flex flex-col select-none">
                    <h2 class="text-lg font-semibold text-gray-700 mb-4">Waste Reuse Suggestions</h2>
                    <div class="flex flex-col gap-4">
                        <div class="border border-gray-300 rounded-lg px-4 py-3 bg-gray-50 text-gray-600 text-base">
                            Suggestion 1</div>
                        <div class="border border-gray-300 rounded-lg px-4 py-3 bg-gray-50 text-gray-600 text-base">
                            Suggestion 2</div>
                        <div class="border border-gray-300 rounded-lg px-4 py-3 bg-gray-50 text-gray-600 text-base">
                            Suggestion 3</div>
                    </div>
                </div>

            </section>

            <!-- Right Column -->
            <aside class="flex flex-col space-y-6 w-full md:w-96 min-w-[280px]">

                <!-- Illustration and Weather Update -->
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <h3 class="text-md font-semibold text-gray-700 mb-2 select-none">Illustration</h3>
                    <div
                        class="rounded-md overflow-hidden mb-3 bg-gray-100 aspect-video flex items-center justify-center">
                        <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2c3c9ce0-1e98-4435-a445-4d1cc96d194b.png"
                            alt="Minimalist illustration style image with soft pastel colors showing irrigation system concept"
                            class="object-contain max-h-full max-w-full" onerror="this.style.display='none'" />
                    </div>
                    <p class="text-gray-700 select-none">Weather Update <span class="font-semibold">30Â°C</span></p>
                    <div class="bg-gray-50 p-3 rounded-lg shadow-md flex justify-between items-center select-none">
                        <span class="text-gray-600 font-medium">Instruction</span>
                        <button class="text-indigo-600 hover:underline focus:outline-none">Show ></button>
                    </div>
                </div>

                <!-- Instruction Box -->


                <!-- Alerts -->
                <div class="bg-white p-4 rounded-lg shadow-md select-none">
                    <h3 class="text-md font-semibold text-gray-700 mb-3">Alert</h3>
                    <div class="space-y-3">
                        <div class="border border-red-400 text-red-700 bg-red-50 rounded-md px-4 py-2">Alert 1</div>
                        <div class="border border-red-400 text-red-700 bg-red-50 rounded-md px-4 py-2">Alert 2</div>
                    </div>
                </div>

                <!-- Alert System Setup -->
                <div class="bg-white p-4 rounded-lg shadow-md select-none">
                    <h3 class="text-md font-semibold text-gray-700 mb-3">Alert system setup</h3>
                    <button
                        class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Setup
                        Alert</button>
                </div>

            </aside>

        </main>
    </div>

    <!-- Select from here -->
    <!-- Pop-up Form Modal -->
    <div class="setup-irrigation hidden p-3 fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div
            class="setup-box max-w-md mx-auto bg-gray-200 rounded shadow overflow-hidden transform transition-all duration-500 -translate-y-full opacity-0">
            <div class="top-panel bg-indigo-600 text-gray-200 p-4 flex justify-between shadow-md shadow-gray-400">
                <div class="title ">
                    <h1 class="text-lg font-bold">Setup Smart Irrigation</h1>
                </div>
                <div class="close" id="close-waterpump-setup">
                    <svg class="fill-gray-200 hover:fill-red-600 cursor-pointer" width="32px"
                        xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path fill="none" d="M0 0h24v24H0z"></path>
                        <path
                            d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20ZM12 10.5858L14.8284 7.75736L16.2426 9.17157L13.4142 12L16.2426 14.8284L14.8284 16.2426L12 13.4142L9.17157 16.2426L7.75736 14.8284L10.5858 12L7.75736 9.17157L9.17157 7.75736L12 10.5858Z">
                        </path>
                    </svg>
                </div>
            </div>
            <div class="input-data py-4 px-6 mt-2">
                <form class="flex flex-col space-y-4">
                    <div class="flex md:flex-row flex-col gap-2 items-center">
                        <label class="text-gray-800 font-medium mb-1 md:w-36">Title: </label>
                        <input type="text"
                            class="bg-gray-50 w-64 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Enter Title">
                    </div>
                    <div class="flex md:flex-row flex-col gap-2 items-center">
                        <label class="text-gray-800 font-medium mb-1 w-36">Choose Category: </label>
                        <select
                            class="bg-gray-50 w-64 text-gray-500 focus:text-black border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option class="text-gray-400" value="" disabled selected>Select Crop</option>
                            <option value="wheat">Wheat</option>
                            <option value="rice">Rice</option>
                            <option value="maize">Maize</option>
                            <option value="cotton">Cotton</option>
                            <option value="fruits">Fruits</option>
                        </select>
                    </div>
                    <div class="flex md:flex-row flex-col gap-2 items-center">
                        <label class="text-gray-800 font-medium mb-1">Start irrigation at moisture level (%):
                        </label>
                        <div class="relative">
                            <input type="number"
                                class="md:w-32 border px-4 py-2 rounded focus:ring-2 focus:ring-green-500 pr-10"
                                placeholder="0">
                            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">%</span>
                        </div>
                    </div>
                    <div class="flex md:flex-row flex-col gap-2 items-center">
                        <label class="text-gray-800 font-medium mb-1">Stop irrigation at moisture level (%):
                        </label>
                        <div class="relative">
                            <input type="number"
                                class="md:w-32 border px-4 py-2 rounded focus:ring-2 focus:ring-green-500 pr-10"
                                placeholder="0">
                            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">%</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="save-data my-4 flex justify-center">
                <button class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" type="button">Save</button>
            </div>
        </div>
    </div>
    <!-- NOW COPY & PASTE -->

    <script src="script.js"></script>
</body>

</html>